<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/rounded_border" />
            <item android:right="8dp" android:left="8dp">
                <bitmap android:gravity="end" android:src="@drawable/ic_radio_selected" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/rounded_border" />
            <item android:right="8dp" android:left="8dp">
                <bitmap android:gravity="end" android:src="@drawable/ic_radio_unselected" />
            </item>
        </layer-list>
    </item>
</selector>